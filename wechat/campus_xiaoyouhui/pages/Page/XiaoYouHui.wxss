}
.Activity-list .Activity-item{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #A9A9A9;
}
.Activity-list .Activity-item .title{
  font-size: 28rpx;
  color: #0C0C0C;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.Activity-list .Activity-item .cont{
