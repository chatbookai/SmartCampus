.appointment-headurl {
  height: auto;
  padding: 30rpx 0;
  display: flex;
}

.appointment-headurl image {
  display: inline-block;
  border-style: solid;
  font-weight: bold;
  border-width: 1rpx;
  border-color: white;
  border-radius: 50%;
}