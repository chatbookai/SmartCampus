} */

.list .sub-item .surplus{
  display: flex;
  align-items: center;
  height:50rpx;
}
.list .sub-item .surplus text{
  font-size: 24rpx;
}
.list .sub-item input{
  width: 120rpx;
  height: 50rpx;
  border: 1rpx solid #666;
  padding: 0 10rpx;
  border-radius: 6rpx;
  font-size: 33rpx;
}

.list .totle-box{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #17c3c9;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.list .totle-box>view{
  margin-right: 40rpx;
}

.list .btn-box{
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.list .btn-box .confirm{
  padding: 10rpx 30rpx;
  border: 2rpx solid #17c3c9;
  color: #17c3c9;
  border-radius: 40rpx;
}