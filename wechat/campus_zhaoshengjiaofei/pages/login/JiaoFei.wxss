page{
  background: #f2f2f2;
}
.user-info{
  display: flex;
  align-items: center;
  padding: 12rpx 30rpx;
  background: #fff;  
  margin-bottom: 16rpx;
}
.user-info image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-info .nickname-class .nickname{
  font-size: 30rpx;
  margin-bottom: 12rpx;
  color: #333;
}
.user-info .nickname-class .class{
  font-size: 26rpx;
  color: #666;
}
.list{
  
  
}
.list .item{
  margin-bottom: 8rpx;
  background: #fff;
  padding: 0 0 30rpx;
}
.list .title{
  font-size: 30rpx;
  color: #333;
  padding: 24rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}
.list .sub-list{
  padding: 6rpx 0;
  background: #f8f8f8;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}
.list .sub-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  padding: 10rpx 0;
}
.list .sub-item .left{
  display: flex;
}
.list .sub-item .left .name{
  width: 210rpx;
}
.list .sub-item .left .payable{
  width: 150rpx;
}
.list .sub-item .left .paid{
  width: 150rpx;
}

.list .sub-item .name{
  font-weight: 550;
}
