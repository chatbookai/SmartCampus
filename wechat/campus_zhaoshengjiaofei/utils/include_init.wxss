.loading{  
  /* padding-bottom: 10rpx;   */
  text-align: center; 
  font-size: 24rpx;
  /* color: #666; */
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;   
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  
.search-show{
