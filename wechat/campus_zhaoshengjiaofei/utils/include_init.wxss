.scroll-container {
    overflow-x: auto;
    white-space: nowrap;
    background: #ffffff;
}

.scroll-content {
    display: flex;
    flex-direction: row;
}

.scroll-content-item {
    flex-shrink: 0; 
    padding: 6px;
    font-size: 26rpx;
}

.scroll-content-item-selected {
    flex-shrink: 0; 
    padding: 6px;
    font-size: 26rpx;
    font-weight: bold;
}











